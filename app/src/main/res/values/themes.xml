<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelJournalStancilaEva" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.myTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/medium_green</item>
       <item name="android:windowBackground">@color/sandy</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/medium_green</item>
        <item name="android:textViewStyle">@style/greenTextView</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>

    </style>

    <style name="Theme.TravelJournalStancilaEva.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TravelJournalStancilaEva.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelJournalStancilaEva.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/sandy</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:statusBarColor">@color/medium_green</item>

    </style>

    <style name="appBackground">
        <item name="android:background">@color/sandy</item>
    </style>
    <style name="greenTextView">
        <item name="android:textColor">@color/dark_green</item>
    </style>

</resources>