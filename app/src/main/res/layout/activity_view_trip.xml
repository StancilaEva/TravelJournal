<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTripActivity">
    <TextView
        android:id="@+id/tv_view_trip_activity_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:text="@string/trip_name"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/ll_view_trip_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_trip_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="2">
    <TextView
        android:id="@+id/tv_view_trip_activity_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_trip_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_trip_activity_price"
        android:text="@string/destination"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_view_trip_activity_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_trip_name"
        app:layout_constraintStart_toEndOf="@+id/tv_view_trip_activity_destination"
        android:text="price"
        android:textSize="16sp"
        android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_view_trip_activity_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_view_trip_activity"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_trip_activity_start_date"
        android:text="@string/start_date"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_view_trip_activity_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_view_trip_activity"
        app:layout_constraintStart_toEndOf="@+id/tv_view_trip_activity_start_text"
        android:text="@string/the_starting_date"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_view_trip_activity_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_start_text"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_trip_activity_end_date"
        android:text="@string/end_date"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_view_trip_activity_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_start_date"
        app:layout_constraintStart_toEndOf="@+id/tv_view_trip_activity_end_text"
        android:text="@string/the_ending_date"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        />
    <RatingBar
        android:id="@+id/rb_view_trip_activity_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_trip_activity_end_text"
        android:isIndicator="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>